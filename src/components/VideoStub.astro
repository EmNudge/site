---
import Stub from "./Stub.astro";
import { formatDate } from "../utils/formatDate";

interface Props {
	url: string;
	title: string;
	speaker: string;
	uploadedAt: string;
	tags: string;
}

const { url, title, speaker, uploadedAt, tags } = Astro.props;

// Extract YouTube video ID from URL
const videoIdMatch = url.match(/(?:youtube\.com\/watch\?v=|youtu\.be\/)([^&]+)/);
const videoId = videoIdMatch?.[1];
const thumbnailUrl = videoId ? `https://img.youtube.com/vi/${videoId}/mqdefault.jpg` : null;

const isCode = tags.includes("code");
---

<div class="video-stub-container">
    {thumbnailUrl && <div class="img-container">
        <div class="screen">
            <img src={thumbnailUrl} alt={title} />
            <div class="scanlines"></div>
            <div class="play-icon">▶</div>
        </div>
        <div class="tags-container">
            {isCode && <span class="tag">&lt;/&gt;</span>}
        </div>
    </div>}
    <Stub
        withDivider={false}
        url={url}
        meta={`${speaker} • ${formatDate(uploadedAt)}`}
        title={title}
    />
</div>

<style>
.video-stub-container {
    display: grid;
    grid-template-columns: 120px 1fr;
    align-items: center;
    gap: 28px;
    border: 1px solid transparent;
    border-bottom: 1px solid var(--light-bg);
    padding: 1rem;
    margin: 0 -1rem;
}
.video-stub-container:hover {
    background: var(--light-bg);
    border-radius: 9px;
    border: 1px solid var(--light-bg);
}
.img-container {
    position: relative;
}
.screen {
    position: relative;
    background: #1a1a2e;
    padding: 6px;
    border-radius: 4px;
    transform: rotate(-2deg);
    box-shadow:
        0 0 0 2px #333,
        0 0 0 4px #1a1a1a,
        4px 6px 12px rgba(0, 0, 0, 0.4);
    overflow: hidden;
}
.screen::before {
    content: '';
    position: absolute;
    top: 2px;
    left: 2px;
    right: 2px;
    height: 30%;
    background: linear-gradient(180deg, rgba(255,255,255,0.1) 0%, transparent 100%);
    border-radius: 2px 2px 50% 50%;
    pointer-events: none;
    z-index: 3;
}
img {
    display: block;
    width: 100%;
    height: 68px;
    object-fit: cover;
    filter: contrast(1.1) saturate(0.8) brightness(0.95);
    border-radius: 2px;
}
.scanlines {
    position: absolute;
    top: 6px;
    left: 6px;
    right: 6px;
    bottom: 6px;
    background: repeating-linear-gradient(
        0deg,
        rgba(0, 0, 0, 0.15) 0px,
        rgba(0, 0, 0, 0.15) 1px,
        transparent 1px,
        transparent 2px
    );
    pointer-events: none;
    border-radius: 2px;
    z-index: 2;
}
.play-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 1.2rem;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8);
    opacity: 0.7;
    z-index: 3;
    pointer-events: none;
}
.video-stub-container:hover .play-icon {
    opacity: 1;
}
.tags-container {
    position: absolute;
    bottom: -2px;
    left: 4px;
    z-index: 10;
    color: black;
}
.tag {
    padding: 0 5px;
    border: 2px solid #000a;
    border-radius: 25%;
    background-color: white;
    box-shadow: 2px 3px 3px black;
    font-weight: bold;
    user-select: none;
    font-size: 0.75rem;
}
</style>

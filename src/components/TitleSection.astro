---
const { title, link, staggered = false } = Astro.props;
---

<section>
    <h1>{title}</h1>

    <div class={staggered ? 'staggered' : ''}>
        <slot />
    </div>

    {link && 
        <div class="more-container">
            <a href={link} title={`more ${title}`} class="more">More</a>
        </div>
    }
</section>

<style>
    section {
        margin: 80px 0;
    }

    .more-container {
        display: flex;
        justify-content: center;
        padding: 1rem 2rem;
    }
    .more {
        margin-top: 20px;
        padding: 1rem 4rem;
        text-align: center;
        display: block;
    }
    .more:hover {
        background: var(--light-bg);
        border-radius: 9px;
    }
    h1 {
        margin: 20px 10px;
        font-size: 2.2em;
    }
</style>
